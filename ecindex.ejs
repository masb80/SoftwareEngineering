<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <div class="jumbotron" id="fortop" align="center">
      <h1 style="color:white;">Election Manager</h1>
    </div>
<h2 align="middle" style="color:#ff0000"> Candidate Page </h2>
<div class="container">
  <div class="well">Click on Name to view Candidate and get more details</div>
</div>

<div class="row">
  <div class="col-sm-2"> </div>
  <div class="col-sm-8">


<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Party</th>
      <th>Age</th>
      <th>Presidential</th>
      <th>District</th>
      <th>Pid</th>
      <th>Presidential Votes</th>
    </tr>
  </thead>
  <tbody>

      <tr >
        <% for(var i=0; i<candidates.length; i++) {%>
            <td><a href="/em/candidates/show/<%= candidates[i]._id%>"><%= candidates[i].name %></a></td>
            <td><%= candidates[i].address %></td>
            <td><%= candidates[i].party %></td>
            <td><%= candidates[i].age %></td>
            <td><%= candidates[i].presidential %></td>
            <td><%= candidates[i].district %></td>
            <td><%= candidates[i].pid %></td>
            <td><%= candidates[i].pvote %></td>
          </tr>
          <% } %>

  </tbody>
</table>
</div>
<div class="col-sm-2">

</div>

</div>

<div class="container">
  <div class="well"><a href="/em/home/5a10e055f8e87a2a28fb91e2">Click Me</a> For Admin Home</div>
</div>



  </body>
</html>
