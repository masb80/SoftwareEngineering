<!DOCTYPE html>
<html>
<head>
  <%include ../partials/head %>
</head>

<body>
  <%include ../partials/ivnav%>
  <h3><a href="#">Your Details</a></h3>
<div class= "row">
  <div class="col-sm-6" >

  <table class="table">
     <thead>
       <tr>
         <th>#</th>
         <th>Current Information</th>
       </tr>
     </thead>
     <tbody>
       <tr>
         <td>Name </td>
         <td><%= voter.username %></td>
       </tr>
       <tr class="success">
         <td>Password</td>
         <td> <%= voter.password %></td>
       </tr>
       <tr class="danger">
         <td>First Name</td>
         <td><%= voter.firstname %></td>
       </tr>
       <tr class="info">
         <td>Last Name </td>
         <td><%= voter.lastname %></td>
       </tr>
       <tr class="warning">
         <td>Middle Name </td>
         <td><%= voter.middlename %></td>
       </tr>
       <tr class="active">
         <td>Age </td>
         <td><%= voter.age %></td>
       </tr>
       <tr class="success">
         <td>Email</td>
         <td> <%= voter.email %></td>
       </tr>
     </tbody>
   </table></div>

  <div class="col-sm-6" >
    <h4> Update Information </h4>
    <form action="/voters/update/<%= voter._id %>" method="post">

    <div class="form-group"  >
        <input type="text" name="username" class="form-control" value="<%= voter.username %>"  placeholder="Username" >
        <input type="text" name="password" class="form-control" value="<%= voter.password %>"  placeholder="Password" >
        <input type="text" name="firstname" class="form-control" value="<%= voter.firstname %>"  placeholder="First Name" >
        <input type="text" name="lastname" class="form-control" value="<%= voter.lastname %>"  placeholder="Last Name" >
        <input type="text" name="middlename" class="form-control" value="<%= voter.middlename %>"  placeholder="Middle Name" >
        <input type="text" name="age" class="form-control" value="<%= voter.age %>"  placeholder="Age" >
        <input type="text" name="email" class="form-control" value="<%= voter.email %>"  placeholder="Email" >
      </div>
      <button type="submit" class="btn btn-primary" name="button" > Update </button>
      </form>
   </div>

</div>


</body>
</html>
